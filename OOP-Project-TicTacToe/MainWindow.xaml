<Window x:Class="OOP_Project_TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OOP_Project_TicTacToe"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="TicTacToe" Content="Tic Tac Toe" HorizontalAlignment="Center" Height="70" Margin="0,36,0,0" VerticalAlignment="Top" Width="256" FontSize="48" FontWeight="Bold"/>
        <Button x:Name="buttonNewGame" Content="New Game" HorizontalAlignment="Center" Height="60" Margin="0,172,0,0" VerticalAlignment="Top" Width="256" Click="ButtonNewGame"/>
    </Grid>
</Window>
